<?xml version="1.0"?>
<web-app>
    <servlet>
        <servlet-name>Dispatcher</servlet-name>
        <servlet-class>ua.edu.sumdu.lab3.controller.Linker</servlet-class>
        <init-param>
            <param-name>dbname</param-name>
            <param-value>oracle</param-value>
        </init-param>
        <init-param>
            <param-name>dburl</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbpass</param-name>
            <param-value>ballsofsteel</param-value>
        </init-param>
        <init-param>
            <param-name>dbuser</param-name>
            <param-value>quagmire</param-value>
        </init-param>
    </servlet>
 
 
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/Dispatcher</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/album</url-pattern>
    </servlet-mapping>  

    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/album/all</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/artist</url-pattern>
    </servlet-mapping>  

    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/artist/all</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/label</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/addalbum</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/addlabel</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/addartist</url-pattern>
    </servlet-mapping>  
 
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>  
    
     <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>  
        
    <welcome-file-list>
        <welcome-file>/pages/index.jsp</welcome-file>
    </welcome-file-list>
    
  <taglib>
    <taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
    <taglib-location>/WEB-INF/tags/fmt.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/fmt-rt</taglib-uri>
    <taglib-location>/WEB-INF/tags/fmt-rt.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
    <taglib-location>/WEB-INF/tags/c.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
    <taglib-location>/WEB-INF/tags/c-rt.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
    <taglib-location>/WEB-INF/tags/sql.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/sql-rt</taglib-uri>
    <taglib-location>/WEB-INF/tags/sql-rt.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/x</taglib-uri>
    <taglib-location>/WEB-INF/tags/x.tld</taglib-location>
  </taglib>

  <taglib>
    <taglib-uri>http://java.sun.com/jstl/x-rt</taglib-uri>
    <taglib-location>/WEB-INF/tags/x-rt.tld</taglib-location>
  </taglib>
  
  <resource-ref>
    <description>Oracle Datasource example</description>
    <res-ref-name>jdbc/DiscsDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
</web-app>
